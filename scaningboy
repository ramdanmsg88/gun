function save($fname,$value){
    $file = fopen($fname, "a");
    fwrite($file, $value);
    fclose($file);
}

function checkBackdoor($file_location){
    global $path;

    $keywords = array(
        'exec(', 'gzinflate(', 'file_put_contents(', 'file_get_contents(', 'system(', 'passthru(',
        'shell_exec(', 'move_uploaded_file(', 'eval(', 'base64',
        '_halt_compiler', 'base64_decode(', 'base64_encode(', 'webconsole', 'uploader', 'hacked',
        'set_time_limit(', 'hex2bin(', 'bin2hex(', 'WSOstripslashes',
        'AGUSTUS_17_1945', 'Cyto', 'con7ext', 'Fileman', '68746d6c7370656369616c6368617273',
        'xiaoxiannv', 'ruzhu', 'edoced_46esab', 'Solevisible',
        'Zeerx7', 'phpFileManager', 'dZNOmgVpUDdbg', 'indoxploit', 'mini shell', 'minishell',
        'marijuana', 'googlebot', 'HTTP_USER_AGENT',
        '676f6f676c65626f74', 'tbbtyrobot', 'Z29vZ2xlYm90', 'tinyfilemanager.github.io', 'xleet',
        'b374k', 'set_magic_quotes_runtime(', 'pastebin',
        'shell(', 'alfa', 'filemanager',
        "'f'.'u'.'n'.'ction'.'_exis'.'ts';",
        "'e'.'va'.'l';",
        "'ba'.'s'.'e64'.'_'.'enc'.'od'.'e';"
    );

    $contents = @file_get_contents($file_location);

    if($contents && strlen($contents) > 0){
        $reasons = []; // simpan semua keyword yang nyangkut
        foreach($keywords as $kw){
            if(stripos($contents, $kw) !== false){
                $reasons[] = $kw;
            }
        }

        if(!empty($reasons)){
            $reasonList = implode(", ", $reasons);
            echo "[+] Suspect file -> <a href='?delete=$file_location&dir=$path'>
                    <font color='yellow'>[DELETE]</font></a> 
                    <font color='red'><b>$file_location</b></font> <br>";
            echo "<div style='color:gold; font-weight:bold; font-size:18px; margin:5px 0;'>⚠️ Reason: $reasonList</div>";

            save("resultbrm.txt", "$file_location (reason: $reasonList)\n");

            echo '<textarea class="form-control" name="content" cols="80" rows="15">'.htmlspecialchars($contents).'</textarea><br><br>';
        }
    }
}


function scanBackdoor($current_dir){
    if(is_readable($current_dir)){
        $dir_location = scandir($current_dir);
        foreach ($dir_location as $file) {
            if($file === "." || $file === ".."){ continue; }
            $file_location = str_replace("//", "/",$current_dir.'/'.$file);
            $nFile = substr($file, -4, 4);
            if($nFile == ".php"){
                checkBackdoor($file_location);
            }else if(is_dir($file_location)){
                scanBackdoor($file_location);
            }
        }
    }
}
